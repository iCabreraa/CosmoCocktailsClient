{
  "name": "cosmococktails-ecommerce",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "eslint . --config eslint.config.mjs",
    "lint:fix": "eslint . --config eslint.config.mjs --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "typecheck": "tsc --noEmit",
    "analyze": "ANALYZE=true npm run build",
    "analyze:server": "BUNDLE_ANALYZE=server npm run build",
    "analyze:browser": "BUNDLE_ANALYZE=browser npm run build",
    "build:analyze": "npm run build && npm run analyze",
    "performance:audit": "npm run build && npx lighthouse http://localhost:3000 --output=html --output-path=./lighthouse-report.html",
    "bundle:size": "npm run build && npx bundlesize",
    "performance:test": "npm run build && npm run start & sleep 5 && npm run performance:audit",
    "performance:full": "node scripts/performance-analysis.js",
    "performance:quick": "npm run build && npm run analyze && npm run bundle:size"
  },
  "dependencies": {
    "@fontsource/inter": "^5.2.5",
    "@fontsource/major-mono-display": "^5.2.5",
    "@fontsource/playfair-display": "^5.2.5",
    "@heroicons/react": "^2.2.0",
    "@radix-ui/react-icons": "^1.3.2",
    "@shadcn/ui": "^0.0.4",
    "@stripe/react-stripe-js": "^4.0.1",
    "@stripe/stripe-js": "^7.9.0",
    "@supabase/ssr": "^0.6.1",
    "@supabase/supabase-js": "^2.57.2",
    "@tanstack/react-query": "^5.87.1",
    "@tanstack/react-query-devtools": "^5.87.3",
    "@vercel/kv": "^3.0.0",
    "bcryptjs": "^3.0.2",
    "clsx": "^2.1.1",
    "dotenv": "^17.2.2",
    "framer-motion": "^12.7.3",
    "gray-matter": "^4.0.3",
    "jsonwebtoken": "^9.0.2",
    "lucide-react": "^0.488.0",
    "next": "^14.2.3",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-hot-toast": "^2.6.0",
    "react-icons": "^5.5.0",
    "server-only": "^0.0.1",
    "stripe": "^18.5.0",
    "swiper": "^11.2.6",
    "tailwind-merge": "^3.2.0",
    "zod": "^4.1.12",
    "zustand": "^5.0.3"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@next/bundle-analyzer": "^15.5.2",
    "@tailwindcss/postcss": "^4",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "@vercel/analytics": "^1.5.0",
    "@vercel/speed-insights": "^1.2.0",
    "autoprefixer": "^10.4.21",
    "bundlesize": "^0.18.2",
    "critters": "^0.0.23",
    "eslint": "^9",
    "eslint-config-next": "15.3.0",
    "lighthouse": "^12.8.2",
    "postcss": "^8.5.3",
    "supabase": "^2.48.3",
    "tailwindcss": "^3.4.17",
    "typescript": "^5",
    "webpack-bundle-analyzer": "^4.10.2"
  }
}
